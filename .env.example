# Exchange Configuration
EXCHANGE=binance                     # Exchange to use: binance or coindcx

# Binance API Configuration
# Get your API keys from: https://www.binance.com/en/my/settings/api-management

# Optional: Only needed for trading operations (not required for reading public market data)
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET_KEY=your_secret_key_here

# Optional: Use Binance Testnet for development (default: false)
BINANCE_SANDBOX=false

# CoinDCX API Configuration (optional - public data works without keys)
# Get your API keys from: https://coindcx.com/api-dashboard
COINDCX_API_KEY=your_api_key_here
COINDCX_SECRET_KEY=your_secret_key_here

# Trading Signal Configuration
CHECK_INTERVAL_MINUTES=1          # How often to check (in minutes) - Default: 1
TRADING_SYMBOL=SOL/USDT          # Trading pair to monitor - Default: SOL/USDT
EMA_PERIOD=50                    # EMA period for calculation - Default: 50
PRICE_THRESHOLD=0.1              # Gap between price and EMA (0.1 = very close) - Default: 0.1
TIMEFRAME=15m                    # Candle timeframe (1m, 5m, 15m, 1h, etc.) - Default: 15m
VERBOSE_LOGGING=true             # Show status on every check - Default: true

# Database Auto-Cleanup Configuration
MAX_DB_SIZE_MB=10.0              # Maximum database size in MB before cleanup - Default: 10.0
CLEANUP_RETENTION_DAYS=7         # Number of days to keep data during cleanup - Default: 7

# Note: For this SolSignals monitoring app, API keys are NOT required
# since we only read public market data (OHLCV candles)
# The app will work without API credentials